<?xml version="1.0" encoding="UTF-8"?>
<nifty xmlns="http://nifty-gui.sourceforge.net/nifty-1.3.xsd" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://nifty-gui.sourceforge.net/nifty-1.3.xsd http://nifty-gui.sourceforge.net/nifty-1.3.xsd">
    <screen id="start" controller="mygame.Main">
        <layer id="layer" childLayout="center">
            <panel id="titleBar" height="10%" width="100%" align="center" valign="top" backgroundColor="#BEBEBE" childLayout="center" visibleToMouse="false">
                <text id="titleText" font="Interface/Fonts/TitleChalk.fnt" color="#000f" text="VR Information App" align="center" valign="center" />
            </panel>
            <panel id="sideBar" height="70%" width="30%" align="left" valign="center" backgroundColor="#FFFFFF" childLayout="vertical" visibleToMouse="false">
                <panel id="sideBarTitle" height="10%" width="100%" align="left" valign="top" backgroundColor="#BEBEBE" childLayout="center" visibleToMouse="false">
                    <text id="infoTitle" font="Interface/Fonts/TitleChalk.fnt" color="#000f" text="Information Box" align="center" valign="center" />
                </panel>
                <text id="infoText" font="Interface/Fonts/BodyTypewriter.fnt" color="#000f" text="&#10;Information text box" align="center" valign="top" />
            </panel>
        </layer>
    </screen>
</nifty>

